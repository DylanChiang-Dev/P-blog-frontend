---
import "../styles/global.css";
import ThemeToggle from "../components/ThemeToggle";
import EditArticleButton from "../components/EditArticleButton";

interface Props {
	title: string;
	description?: string;
	articleId?: string | number;
}

const { title, description = "A minimalist blog.", articleId } = Astro.props;
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline>
			// Initialize theme to prevent FOUC
			const theme = (() => {
				if (
					typeof localStorage !== "undefined" &&
					localStorage.getItem("theme")
				) {
					return localStorage.getItem("theme");
				}
				// Default to dark mode
				return "dark";
			})();

			if (theme === "dark") {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
			}
		</script>
	</head>
	<body
		class="bg-background text-foreground antialiased min-h-screen flex flex-col"
	>
		<div
			class="fixed inset-0 -z-10 h-full w-full bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)] dark:bg-[radial-gradient(#1f2937_1px,transparent_1px)]"
		>
		</div>

		<header
			class="sticky top-0 z-50 w-full border-b border-white/10 bg-white/70 backdrop-blur-xl dark:bg-black/70 dark:border-white/5 supports-[backdrop-filter]:bg-white/60"
		>
			<div
				class="container mx-auto px-4 h-16 flex items-center justify-between"
			>
				<a
					href="/"
					class="text-xl font-bold tracking-tight hover:opacity-80 transition-opacity"
				>
					Blog
				</a>
				<nav class="flex items-center gap-6 text-sm font-medium">
					<a href="/" class="hover:text-blue-500 transition-colors"
						>首頁</a
					>

					{
						Astro.url.pathname !== "/admin/login" && (
							<a
								href="/admin"
								class="hover:text-blue-500 transition-colors"
							>
								管理
							</a>
						)
					}
					{
						articleId && (
							<EditArticleButton
								client:only="react"
								articleId={articleId}
							/>
						)
					}
					<div
						class="pl-4 border-l border-gray-200 dark:border-gray-800"
					>
						<ThemeToggle client:load />
					</div>
				</nav>
			</div>
		</header>

		<main class="flex-1 container mx-auto px-4 py-8 max-w-4xl">
			<slot />
		</main>

		<footer
			class="border-t border-black/5 dark:border-white/5 py-8 text-center text-sm text-gray-500"
		>
			<p>&copy; {new Date().getFullYear()} Blog. 版權所有.</p>
		</footer>
		<script>
			import React from "react";
			import ToastContainer from "../components/ToastContainer";
			import { createRoot } from "react-dom/client";

			const container = document.createElement("div");
			document.body.appendChild(container);
			const root = createRoot(container);
			root.render(React.createElement(ToastContainer));
		</script>
	</body>
</html>
