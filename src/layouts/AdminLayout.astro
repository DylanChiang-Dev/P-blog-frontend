---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - 管理後台</title>
		<script is:inline>
			// Initialize theme to prevent FOUC
			const theme = (() => {
				if (
					typeof localStorage !== "undefined" &&
					localStorage.getItem("theme")
				) {
					return localStorage.getItem("theme");
				}
				// Default to dark mode
				return "dark";
			})();

			if (theme === "dark") {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
			}
		</script>
	</head>
	<body
		class="bg-gray-50 dark:bg-black text-foreground antialiased min-h-screen"
	>
		<!-- Auth Loading Overlay - Hide content until authenticated -->
		<div
			id="auth-check-overlay"
			class="fixed inset-0 bg-white dark:bg-black z-50 flex items-center justify-center"
		>
			<div
				class="animate-spin rounded-full h-12 w-12 border-b-2 border-zinc-900 dark:border-white"
			>
			</div>
		</div>

		<main class="min-h-screen">
			<slot />
		</main>

		<script>
			import React from "react";
			import { checkAuth, logout, $auth } from "../stores/auth";
			import ToastContainer from "../components/ToastContainer";
			import { createRoot } from "react-dom/client";

			console.log("[AdminLayout] Script loaded");

			// Mount ToastContainer
			const container = document.createElement("div");
			document.body.appendChild(container);
			const root = createRoot(container);
			root.render(React.createElement(ToastContainer));

			// Client-side auth check (only to hide loading overlay)
			// Server-side auth already handles redirects, so we don't redirect here
			checkAuth().then(() => {
				const auth = $auth.get();
				console.log("[AdminLayout] Auth check result:", auth);

				// Always remove loading overlay (server-side auth handles actual security)
				console.log("[AdminLayout] Removing loading overlay");
				const overlay = document.getElementById("auth-check-overlay");
				if (overlay) {
					overlay.style.display = "none";
				}
			});
		</script>
	</body>
</html>
